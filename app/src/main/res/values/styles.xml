<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/lightTextColour</item>
        <item name="android:windowBackground">@color/backgroundColour</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/timerBackground</item>
        <item name="android:fontFamily">@font/worksans_light</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/stat_title_size</item>
    </style>

    <style name="StatValue" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textSize">@dimen/stat_size</item>
    </style>

</resources>
