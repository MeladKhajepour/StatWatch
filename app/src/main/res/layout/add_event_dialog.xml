<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:importantForAutofill="no">

       <EditText
           android:id="@+id/dialog_hours"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:fontFamily="@font/lato"
           android:textSize="18sp"
           android:hint="HH"
           android:inputType="numberPassword"
           android:maxLength="2"
           android:nextFocusForward="@id/dialog_mins"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="4dp"
           android:layout_marginStart="4dp"
           android:fontFamily="@font/lato"
           android:textSize="18sp"
           android:text=":"/>

       <EditText
           android:id="@+id/dialog_mins"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:fontFamily="@font/lato"
           android:textSize="18sp"
           android:hint="MM"
           android:inputType="numberPassword"
           android:maxLength="2"
           android:nextFocusForward="@id/dialog_secs" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="4dp"
           android:layout_marginStart="4dp"
           android:fontFamily="@font/lato"
           android:textSize="18sp"
           android:text=":"/>

       <EditText
           android:id="@+id/dialog_secs"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:fontFamily="@font/lato"
           android:textSize="18sp"
           android:hint="SS"
           android:inputType="numberPassword"
           android:maxLength="2"
           android:nextFocusForward="@id/dialog_tenths" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="4dp"
           android:layout_marginStart="4dp"
           android:fontFamily="@font/lato"
           android:textSize="18sp"
           android:text="."/>

       <EditText
           android:id="@+id/dialog_tenths"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:fontFamily="@font/lato"
           android:textSize="18sp"
           android:hint="s"
           android:inputType="numberPassword"
           android:maxLength="1" />

   </LinearLayout>

</FrameLayout>