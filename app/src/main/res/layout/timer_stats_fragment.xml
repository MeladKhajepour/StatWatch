<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/stats">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="12dp"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginBottom="12dp"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/shortest_event_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shortest Event"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/shortest_event_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shortest_event_label"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:text="00:00.00"
                android:textSize="24sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/average_time_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average Time"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/average_time_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/average_time_label"
                android:layout_marginTop="12dp"
                android:text="29:59.98"
                android:textAlignment="center"
                android:textSize="24sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/longest_event_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longest Event"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/longest_event_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/longest_event_label"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:text="59:59.99"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>