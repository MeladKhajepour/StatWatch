<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/timerBackground"/>

        <TextView
            android:id="@+id/timer_textview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/stats"
            android:textSize="116dp"
            android:textAlignment="center"
            android:paddingBottom="?attr/actionBarSize"
            android:gravity="center"
            android:text="0:00.0"
            android:fontFamily="@font/lato"
            android:background="@color/timerBackground"/>

        <include layout="@layout/event_stats_layout" android:id="@+id/stats"/>

        <ListView
            android:id="@id/events_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="124dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/stats"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/timer_btn"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/start_icon"
        android:scaleType="center"
        android:layout_gravity="bottom|center"
        app:backgroundTint="@color/startButtonColour"/>

    <View
        android:id="@+id/divider"
        android:layout_width="42dp"
        android:layout_height="1dp"
        app:layout_anchor="@id/timer_btn"
        app:layout_anchorGravity="start|center_vertical"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/timer_reset_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="start|center_vertical"
        android:scaleType="center"
        android:src="@drawable/reset_icon"
        android:visibility="invisible"
        app:backgroundTint="@color/resetButtonColour"
        app:layout_anchor="@+id/divider"
        app:layout_anchorGravity="center_vertical" />

</android.support.design.widget.CoordinatorLayout>