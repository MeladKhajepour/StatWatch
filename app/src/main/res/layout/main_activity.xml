<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/timer_textview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/container"
        android:textSize="108sp"
        android:textAlignment="center"
        android:paddingBottom="?attr/actionBarSize"
        android:fontFamily="@font/lato"
        android:background="@color/colorPrimary"
        android:text="0:00.0"/>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/timer_textview"
        app:layout_constraintBottom_toTopOf="@id/button_bar_divider">

        <include layout="@layout/event_stats_layout" android:id="@+id/stats"/>

        <ListView
            android:id="@+id/events_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stats"/>

    </RelativeLayout>

    <View
        android:id="@+id/button_bar_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintBottom_toTopOf="@id/button_bar"
        android:background="@color/background_colour"/>

    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        app:layout_constraintTop_toBottomOf="@id/button_bar_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <FrameLayout
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/timer_reset_ripple"
            android:visibility="invisible"
            android:background="@color/background_colour">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:src="@drawable/reset_icon"
                android:contentDescription="Reset button"
                android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/start_pause_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/red_to_grey_transition"
            android:foreground="@drawable/moe_ripple">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/button_bar_divider"
                android:layout_gravity="start"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:src="@drawable/start_icon"
                android:contentDescription="Start/pause button"
                android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/add_event_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/moe_ripple"
            android:background="@drawable/round_rect_accent"
            android:visibility="invisible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/add_icon"
                android:contentDescription="Add event button"
                android:layout_gravity="center"/>

        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>