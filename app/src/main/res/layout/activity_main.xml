<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/timer_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/stats"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"
        android:textSize="88sp"
        android:textAlignment="center"
        android:text="0:00.00"/>

    <include layout="@layout/event_stats_layout" android:id="@+id/stats"/>

    <ListView
        android:id="@id/events_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="124dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/stats"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/timer_btn"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/start_icon"
        android:scaleType="center"
        app:backgroundTint="@color/startButtonColour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/timer_reset_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="42dp"
        android:visibility="invisible"
        android:scaleType="center"
        android:src="@drawable/reset_icon"
        app:backgroundTint="@color/resetButtonColour"
        app:layout_constraintEnd_toStartOf="@id/timer_btn"
        app:layout_constraintTop_toTopOf="@id/timer_btn"
        app:layout_constraintBottom_toBottomOf="@id/timer_btn"/>

</android.support.constraint.ConstraintLayout>