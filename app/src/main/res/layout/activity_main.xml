<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/timer_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/stats"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"
        android:textSize="88sp"
        android:textAlignment="center"
        android:text="0:00.00"/>

    <LinearLayout
        android:id="@id/stats"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timer_textview"
        app:layout_constraintBottom_toTopOf="@+id/events_list">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="12dp"
            android:background="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/shortest_event_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shortest Event"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/shortest_event_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shortest_event_label"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"
                    android:text="00:00.00"
                    android:textSize="24sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/average_time_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Time"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/average_time_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/average_time_label"
                    android:layout_marginTop="12dp"
                    android:text="29:59.98"
                    android:textAlignment="center"
                    android:textSize="24sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/longest_event_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longest Event"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/longest_event_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/longest_event_label"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:text="59:59.99"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorAccent"/>

    </LinearLayout>

    <ListView
        android:id="@id/events_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/stats"
        app:layout_constraintBottom_toTopOf="@+id/timer_btns_area"/>

    <LinearLayout
        android:id="@id/timer_btns_area"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/events_list"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/timer_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Start"
            android:textSize="40sp"
            android:fontFamily="sans-serif light"/>

        <Button
            android:id="@+id/timer_add_btn"
            android:layout_width="0dp"
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:text="Add"
            android:textSize="40sp"
            android:fontFamily="sans-serif light"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>