<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:id="@+id/timer_area"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:textSize="88sp"
            android:textAlignment="center"
            android:id="@+id/timer_textview"
            android:text="00:00.00"
            android:layout_marginTop="64dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Start"
                android:textSize="56sp"
                android:id="@+id/timer_btn"
                android:fontFamily="sans-serif light"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="0"
                android:layout_height="match_parent"
                android:text="Add"
                android:textSize="24sp"
                android:id="@+id/timer_add_btn"
                android:fontFamily="sans-serif light"/>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/times_list"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/timer_area"
        android:layout_above="@id/stats"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96sp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/stats">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Fastest Time"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/fastest_time"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Average Time"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/average_time"/>

        </LinearLayout>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Slowest Time"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/slowest_time"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>